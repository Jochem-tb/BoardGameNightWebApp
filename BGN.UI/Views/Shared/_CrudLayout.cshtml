@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isEditMode = ViewData["isEditMode"] as bool? ?? false;
    var gameNightId = -1;
    if (ViewData["ModelGameNightId"] != null)
    {
        gameNightId = ViewData["ModelGameNightId"] as int? ?? 0; ;
    }
    
}

<link rel="stylesheet" href="~/css/crudLayout.css" />

<div class="row justify-content-center align-items-center bg-light">
    <div class="col-10 mt-5 mb-5">
        <div class="card shadow-sm border-0 login-register-card">
            <div class="card-header bg-transparent border-1 pb-1 ">
                <div class="col-12">
                    <div class="crudLayoutTitle text-center p-3 position-relative">
                        <p>@ViewData["Title"]</p>
                        @if(isEditMode)
                        {
                            <a href="javascript:void(0);" class="btn btn-danger p-2 ps-5 pe-5 position-absolute top-0 end-0 me-3 mt-3" onclick="confirmDelete('@gameNightId')">Delete</a>
                        }
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row justify-content-center">
                    <div class="col-12 my-4">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function confirmDelete(gameNightId) {
        // Show confirmation dialog
        if (confirm("Are you sure you want to delete this Gamenight?")) {
            //Redirect to the delete logic
            window.location.href = `/GameNight/Delete?gameNightId=${gameNightId}`;
        }
    }
</script>