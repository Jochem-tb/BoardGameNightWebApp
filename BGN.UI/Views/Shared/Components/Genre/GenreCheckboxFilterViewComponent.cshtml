@model BGN.UI.Models.GameListModel

<div class="mb-3">
    <label class="form-label">Genres</label>
    @foreach (var genre in Model.AvailableGenres)
    {
        <div class="form-check">
            <input class="form-check-input" type="checkbox"
                   value="@genre.Id"
                   id="genre_@genre.Id"
                   name="SelectedGenres"
            @(Model.SelectedGenres!.Contains(genre.Id) ? "checked" : "") />
            <label class="form-check-label" for="genre_@genre.Id">@genre.Name</label>
        </div>
    }
</div>