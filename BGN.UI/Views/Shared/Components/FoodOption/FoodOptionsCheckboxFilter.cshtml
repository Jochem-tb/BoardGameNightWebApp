@model BGN.UI.Models.GameNightListModel
@{
    var excludeLabel = false;
    if (ViewData["ExcludeFoodOptionLabel"] != null)
    {
        excludeLabel = ViewData["ExcludeFoodOptionLabel"] as bool? ?? false; ;
    }
}

<div class="mb-3">
    @if (!excludeLabel)
    {
        <label class="form-label">Food options</label>
    }
    @foreach (var foodOption in Model.AvailableFoodOptions)
    {
        <div class="form-check">
            <input class="form-check-input" type="checkbox"
                   value="@foodOption.Id"
                   id="foodOption_@foodOption.Id"
                   name="SelectedFoodOptions"
            @(Model.SelectedFoodOptions!.Contains(foodOption.Id) ? "checked" : "") />
            <label class="form-check-label" for="foodOption_@foodOption.Id">@foodOption.Name</label>
        </div>
    }
</div>
