@using BGN.Shared
@model IEnumerable<GameDto>

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Game's List</h2>
        <a asp-area="" asp-controller="Home" asp-action="Create" class="btn btn-primary">Add New Game</a>
    </div>
</div>

<div class="row g-4">

@{
        var isUserAdult = true; //TODO: replace with actual user check

    foreach(var game in Model)
    {
            var gameCardClass = game.IsAdult && !isUserAdult ? "bg-danger bg-opacity-50" : "bg-white";
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 ">

        <div class="card h-100 @gameCardClass">

        <!-- PlaceHolder Image for now TODO: fix custom img per game -->
            <img src="~/img/gamenight/BoardGame1s.jpg" class="card-img-top img-fluid" alt="Photo of Boardgame">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title fw-semibold">@game.Name @if(game.IsAdult){<span class="badge bg-danger ms-auto small float-end">18+</span>}</h5>
                <p class="card-text">@game.Description <br/> Playable with: @game.MinPlayers/@game.MaxPlayers</p>


                <a href="#" class="btn btn-primary mt-auto btn-sm">Details</a>
            </div>
        </div>
    </div>
        
    }
}
</div>
