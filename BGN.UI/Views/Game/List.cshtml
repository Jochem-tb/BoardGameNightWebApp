@using BGN.Shared
@model BGN.UI.Models.GameListModel

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Game's List</h2>
        <a asp-area="" asp-controller="Home" asp-action="Create" class="btn btn-primary">Add New Game</a>
    </div>
</div>

<!-- Row for sidebar and game list -->
<div class="row">
    <!-- Sidebar for filters -->
    <div class="col-12 col-md-3 mb-4">
        <div class="bg-light p-3 rounded">
            <h5 class="fw-bold mb-3">Filters</h5>

            <form method="get" asp-controller="Game" asp-action="Filter">

                <!-- Example filter: Search by name -->
                <div class="mb-3">
                    <label asp-for="SearchName" class="form-label">Search by Name</label>
                    <input asp-for="SearchName" type="text" class="form-control" id="searchName" placeholder="Enter game name">
                </div>

                <!-- Example filter: Age restriction -->
                <div class="mb-3">
                    <label class="form-label">Age Restriction</label>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="ageFilterAll" checked>
                        <label class="form-check-label" for="ageFilterAll">All Ages</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="ageFilter18">
                        <label class="form-check-label" for="ageFilter18">18+</label>
                    </div>
                </div>

                <!-- Example filter: Number of players -->
                <div class="mb-3">
                    <label class="form-label">Number of Players</label>
                    <select class="form-select">
                        <option selected>Any</option>
                        <option value="2">2 Players</option>
                        <option value="3">3 Players</option>
                        <option value="4">4+ Players</option>
                    </select>
                </div>

                <!-- Example filter: Game type (checkboxes) -->
                <div class="mb-3">
                    <label class="form-label">Game Type</label>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gameTypeBoard">
                        <label class="form-check-label" for="gameTypeBoard">Board Game</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gameTypeCard">
                        <label class="form-check-label" for="gameTypeCard">Card Game</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gameTypeStrategy">
                        <label class="form-check-label" for="gameTypeStrategy">Strategy</label>
                    </div>
                </div>

                <!-- Filter button -->
                <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
            </form>
        </div>
    </div>





    <div class="col-12 col-md-9">
        <div class="row g-4">

            @{
                var isUserAdult = true; //TODO: replace with actual user check

                foreach (var game in Model.DisplayGames)
                {
                    var gameCardClass = game.IsAdult && !isUserAdult ? "bg-danger bg-opacity-50" : "bg-white";
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 ">

                        <div class="card h-100 @gameCardClass">

                            <!-- PlaceHolder Image for now
                            TODO: fix custom img per game -->
                            <img src="~/img/gamenight/BoardGame1s.jpg" class="card-img-top img-fluid" alt="Photo of Boardgame">

                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-semibold">
                                    @game.Name
                                    @if (game.IsAdult)
                                    {
                                        <span class="badge bg-danger ms-auto small float-end">18+</span>
                                    }
                                </h5>


                                <p class="card-text">
                                    @game.Description <br />
                                    Playable with: @game.MinPlayers/@game.MaxPlayers
                                </p>

                                <!-- Details button on the bottem, alsways bot-->
                                <a href="#" class="btn btn-primary mt-auto btn-sm">Details</a>
                            </div>
                        </div>
                    </div>

                }
            }
        </div>
    </div>
</div>