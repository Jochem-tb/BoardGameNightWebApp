@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style href=""></style>

<div class="row justify-content-center align-items-center bg-light">
    <div class="col-6 mt-5">
        <div class="card shadow-sm border-0 login-register-card">
            <div class="card-header bg-transparent border-1 pb-1 ">
                <ul class="nav nav-tabs card-header-tabs justify-content-center">
                    <li class="nav-item col-6">
                        <a class="nav-link text-muted" href="/Identity/Account/Login">
                            Log in
                        </a>
                    </li>
                    <li class="nav-item col-6">
                        <a class="nav-link text-muted" href="/Identity/Account/Register">
                            Register
                        </a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="row justify-content-center">
                    <div class="col-12 my-4">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(function () {
            const currentPage = location.pathname;
            $('.nav-tabs li a').each(function () {
                const $this = $(this);
                if (currentPage.toLowerCase().indexOf($this.attr('href').toLowerCase()) != -1) {
                    $this.addClass('active text-primary fw-bold');
                }
            });
        });
    </script>
}